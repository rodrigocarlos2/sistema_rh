<%- model_class = TipoPacote -%>
<div class="page-header">
  <h1>Tipos de Pacote</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:numeroEntrevistas) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tipo_pacotes.each do |tipo| %>
      <tr>
        <td><%= link_to tipo.id, tipo_pacote_path(tipo) %></td>
        <td><%= tipo.name %></td>
        <td><%= tipo.numeroEntrevistas %></td>
        <td><%=l tipo.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      tipo_pacote_path(tipo), :class => 'btn btn-default btn-xs' %>
          <% if policy(:user).editTipo? %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_tipo_pacote_path(tipo), :class => 'btn btn-default btn-xs' %>
          <% end %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      tipo_pacote_path(tipo),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if policy(:user).createTipo? %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_tipo_pacote_path,
            :class => 'btn btn-primary' %>
<% end %>