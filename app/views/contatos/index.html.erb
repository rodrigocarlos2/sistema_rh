<%- model_class = Contato -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.singularize.titleize %></h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @contatos.each do |contato| %>
      <tr>
        <td><%= link_to contato.id, contato_path(contato) %></td>
        <td><%= contato.description %></td>
        <td><%=l contato.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      contato_path(contato), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_contato_path(contato), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      contato_path(contato),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if policy(:user).createContact? %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_contato_path,
            :class => 'btn btn-primary' %>
<% end %>